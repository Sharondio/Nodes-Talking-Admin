extends layout

block body
	div(ng-controller='AppCtrl')
		h2 {{name}}
		ul.menu
			li
				a(href='view1') view1
			li
				a(href='view2') view2

		div(ng-view)

		div(ng-controller='RegistrationCtrl')
			| Angular seed app: v
			span(app-version)
			ul.list-group
				li.list-group-item(ng-repeat="item in registrations").
					{{ item }}

	script(src='js/lib/angular/angular.min.js')
	script(src='js/app.js')
	script(src='js/lib/jquery/jquery.js')
	script(src='js/lib/bootstrap/bootstrap.js')
	script(src='js/services.js')
	script(src='js/controllers.js')
	script(src='js/filters.js')
	script(src='js/directives.js')
